<%= content_for :title, "Shop | Orders" %>
<h2 class="fw-light">Recent Order</h2>
<hr class="my-1">
<% if !(@orders.nil?) %>
<table class="table table-hover table-striped">
    <thead class="bg-dark text-center text-white">
        <tr>
            <th>Order id</th>
            <th>Order date</th>
            <th>Order Total</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody class="text-center">
        <%= render partial: "orders/order", collection: @orders %>
    </tbody>
</table>
<% end %>
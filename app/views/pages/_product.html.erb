<div class="col-sm-6  col-lg-4 my-1">
  <div class="card bg-light text-dark shadow h-100 ">
    <div class="card-body">
      <h4 class="card-title">
        <div class="row justify-content-between">
          <p class="col-6 small">Weight</p>
          <p class="col-6 text-end text-uppercase lead">
            <%= format_weight(product) %>
          </p>
        </div>
        <div class="row">
          <p class="col-6 small">Price</p>
          <p class=" lead col-6 text-end text-danger"><%= number_to_currency(product.product_price) %>
          </p>
        </div>
        <p class="card-text">
          <%= link_to product.product_name, product_path(product.id) ,class:'btn btn-outline-primary btn-lg w-100 ' %></h4>
      </p>
    </div>
  </div>
</div>